<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>annotations</Nullable>
        <PlatformTarget>AnyCPU</PlatformTarget>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <DockerfileContext>.</DockerfileContext>
        <ContainerDevelopmentMode>Regular</ContainerDevelopmentMode>
        <DockerfileBuildArguments>-t contoso/front-end:v2.0</DockerfileBuildArguments>
        <ApplicationIcon>Statics\app.ico</ApplicationIcon>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(OS)' == 'Windows_NT' ">
        <DefineConstants>_WINDOWS</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
      <DebugType>embedded</DebugType>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
      <DebugType>embedded</DebugType>
      <Optimize>False</Optimize>
    </PropertyGroup>

    <ItemGroup>
      <EmbeddedResource Include="Statics\**\*" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="docker\**" />
      <Compile Remove="Tests\**" />
      <EmbeddedResource Remove="docker\**" />
      <EmbeddedResource Remove="Tests\**" />
      <None Remove="docker\**" />
      <None Remove="Tests\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="geonames.db" />
      <None Remove="Statics\controllers\admin.hive.com\cache.html" />
      <None Remove="Statics\controllers\admin.hive.com\css\fontawesome.min.css" />
      <None Remove="Statics\controllers\admin.hive.com\css\main.css" />
      <None Remove="Statics\controllers\admin.hive.com\css\solid.min.css" />
      <None Remove="Statics\controllers\admin.hive.com\index.html" />
      <None Remove="Statics\controllers\admin.hive.com\js\main.js" />
      <None Remove="Statics\controllers\admin.hive.com\localserver.html" />
      <None Remove="Statics\controllers\admin.hive.com\login.html" />
      <None Remove="Statics\controllers\admin.hive.com\logs.html" />
      <None Remove="Statics\controllers\admin.hive.com\partials\footer.html" />
      <None Remove="Statics\controllers\admin.hive.com\partials\head.html" />
      <None Remove="Statics\controllers\admin.hive.com\partials\header.html" />
      <None Remove="Statics\controllers\admin.hive.com\users.html" />
      <None Remove="Statics\controllers\admin.hive.com\webfonts\fa-solid-900.ttf" />
      <None Remove="Statics\controllers\admin.hive.com\webfonts\fa-solid-900.woff2" />
      <None Remove="Statics\controllers\hive.com\img\folder.gif" />
      <None Remove="Statics\controllers\hive.com\img\unknown.gif" />
      <None Remove="Statics\controllers\hive.com\partials\head.html" />
      <None Remove="Statics\controllers\hive.com\search.html" />
      <None Remove="Statics\controllers\hive.com\viewer.html" />
      <None Remove="Statics\controllers\radio.hive.com\index - Copy.html" />
      <None Remove="Statics\docs\vfs_data_readme.txt" />
      <None Remove="Statics\docs\vfs_download_readme.txt" />
      <None Remove="Statics\docs\vfs_hosting_readme.txt" />
      <None Remove="Statics\docs\vfs_statics_readme.txt" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="libs\geonames.db">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="Statics\app.ico" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="libs\geonames.db" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Fluid.Core" Version="2.4.0" />
        <PackageReference Include="HtmlAgilityPack" Version="1.11.46" />
        <PackageReference Include="Humanizer.Core" Version="2.14.1" />
        <PackageReference Include="Microsoft.Data.Sqlite" Version="7.0.4" />
        <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.17.2" />
